<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.home.GetAQuoteFragment">
        <include
            android:id="@+id/header_lay"
            layout="@layout/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true"
       android:layout_below="@id/header_lay"
       >
       <LinearLayout
           android:padding="@dimen/_5sdp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:background="@drawable/edit_gray_bg"
       android:layout_margin="@dimen/_6sdp"
           >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@null"
               android:padding="@dimen/_3sdp"
               android:text=" Note :-  Add Transaction Related Details To pull Add Funds"
               android:textColor="@color/texts"
               android:textAlignment="center"
               android:textColorHint="@color/color_edit_hint"
               android:textSize="@dimen/_14sdp"
               android:layout_marginTop="@dimen/_20sdp"/>

          <!-- <EditText
               android:id="@+id/edtSearch"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/edit_background"
               android:hint="@string/type_here"
               android:inputType="text"
               android:padding="@dimen/_10sdp"
               android:textColor="@color/color_edit_hint"
               android:textColorHint="@color/color_edit_hint"
               android:textSize="@dimen/_12sdp" />-->







              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="@dimen/_5sdp"
                  android:layout_marginTop="@dimen/_8sdp">


                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@null"
                      android:padding="@dimen/_7sdp"
                      android:text="Transaction ID"
                      android:textColor="@color/texts"
                      android:textSize="@dimen/_12sdp"
                      android:textStyle="bold"
                      android:gravity="center_vertical"
                      android:layout_gravity="center_vertical"
                    />


                  <EditText
                      android:id="@+id/edtValue"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@drawable/edit_gray_bg"
                      android:hint="@string/enter_here"
                      android:inputType="text"
                      android:padding="@dimen/_10sdp"
                      android:layout_margin="@dimen/_5sdp"
                      android:textColor="@color/black"
                      android:textColorHint="@color/color_edit_hint"
                      android:textSize="@dimen/_12sdp" />


              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="@dimen/_5sdp"
                  android:layout_marginTop="@dimen/_1sdp">


                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@null"
                      android:padding="@dimen/_7sdp"
                      android:text="Amount ID"
                      android:textColor="@color/texts"
                      android:textSize="@dimen/_12sdp"
                      android:textStyle="bold"
                      android:gravity="center_vertical"
                      android:layout_gravity="center_vertical"
                    />


                  <EditText
                      android:id="@+id/xx"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@drawable/edit_gray_bg"
                      android:hint="@string/enter_here"
                      android:inputType="text"
                      android:padding="@dimen/_10sdp"
                      android:layout_margin="@dimen/_5sdp"
                      android:textColor="@color/black"
                      android:textColorHint="@color/color_edit_hint"
                      android:textSize="@dimen/_12sdp" />


              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="@dimen/_5sdp"
                  android:layout_marginTop="@dimen/_1sdp">


                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@null"
                      android:padding="@dimen/_7sdp"
                      android:text="Upload Payment Receipt"
                      android:textColor="@color/texts"
                      android:textSize="@dimen/_12sdp"
                      android:textStyle="bold"
                      android:gravity="center_vertical"
                      android:layout_gravity="center_vertical"
                    />

                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_100sdp"
                      android:background="@drawable/edit_background"
                      android:inputType="textPassword"
                      android:padding="@dimen/_8sdp"
                      android:layout_margin="@dimen/_5sdp"
                      android:src="@drawable/baseline_add_a_photo"
                      android:textColor="@color/color_edit_hint"
                      android:textColorHint="@color/color_edit_hint"
                      android:textSize="@dimen/_12sdp" />


              </LinearLayout>


           <Button
               android:id="@+id/btnSubmit"
               android:backgroundTint="@color/color_blue"
               app:cornerRadius="@dimen/_7sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_20sdp"
               android:elevation="@dimen/_3sdp"
               android:padding="@dimen/_10sdp"
               android:text="@string/submit"
               android:textAllCaps="false"
               android:textColor="@color/white"
               android:textSize="@dimen/_12sdp"
               android:textStyle="bold" />


       </LinearLayout>
   </ScrollView>

    </RelativeLayout>
</layout>

