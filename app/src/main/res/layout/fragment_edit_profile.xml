<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.home.GetAQuoteFragment">
        <include
            android:id="@+id/header_lay"
            layout="@layout/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_below="@id/header_lay"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10sdp"
                >



                    <TextView
                        android:id="@+id/tvCus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/edit_your_profile"
                        android:textColor="@color/texts"
                        android:textColorHint="@color/color_edit_hint"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_15sdp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/texts"
                    android:textColorHint="@color/color_edit_hint"
                    android:textSize="@dimen/_13sdp"
                    android:text="@string/update_your_contact_information_here"
                   />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@null"
                            android:padding="@dimen/_3sdp"
                            android:text="Name"
                            android:textColor="@color/texts"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_background"
                            android:inputType="textPersonName"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/color_edit_hint"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@null"
                            android:padding="@dimen/_3sdp"
                            android:text="Phone"
                            android:textColor="@color/texts"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_background"
                            android:digits="+0123456789"
                            android:inputType="phone"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/color_edit_hint"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@null"
                            android:padding="@dimen/_3sdp"
                            android:text="Fax"
                            android:textColor="@color/texts"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_fax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_background"
                            android:inputType="none"
                            android:autofillHints="none"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/color_edit_hint"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@null"
                            android:padding="@dimen/_3sdp"
                            android:text="@string/email_id"
                            android:textColor="@color/texts"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_background"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/color_edit_hint"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@null"
                            android:padding="@dimen/_3sdp"
                            android:text="Password"
                            android:textColor="@color/texts"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_background"
                            android:inputType="textPassword"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/color_edit_hint"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@null"
                            android:padding="@dimen/_3sdp"
                            android:text="Confirm Password"
                            android:textColor="@color/texts"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_pass_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_background"
                            android:inputType="textPassword"
                            android:padding="@dimen/_8sdp"
                            android:textColor="@color/color_edit_hint"
                            android:textColorHint="@color/color_edit_hint"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:background="@null"
                                android:padding="@dimen/_3sdp"
                                android:text="Aadhar Front"
                                android:textColor="@color/texts"
                                android:textColorHint="@color/color_edit_hint"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:background="@drawable/edit_background"
                                android:inputType="textPassword"
                                android:padding="@dimen/_8sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:src="@drawable/baseline_add_a_photo"
                                android:textColor="@color/color_edit_hint"
                                android:textColorHint="@color/color_edit_hint"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:background="@null"
                                android:padding="@dimen/_3sdp"
                                android:text="Aadhar Back"
                                android:textColor="@color/texts"
                                android:textColorHint="@color/color_edit_hint"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:background="@drawable/edit_background"
                                android:inputType="textPassword"
                                android:padding="@dimen/_8sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:src="@drawable/baseline_add_a_photo"
                                android:textColor="@color/color_edit_hint"
                                android:textColorHint="@color/color_edit_hint"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:background="@null"
                                android:padding="@dimen/_3sdp"
                                android:text="PAN Front"
                                android:textColor="@color/texts"
                                android:textColorHint="@color/color_edit_hint"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:background="@drawable/edit_background"
                                android:inputType="textPassword"
                                android:padding="@dimen/_8sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:src="@drawable/baseline_add_a_photo"
                                android:textColor="@color/color_edit_hint"
                                android:textColorHint="@color/color_edit_hint"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_2sdp"
                                android:background="@null"
                                android:padding="@dimen/_3sdp"
                                android:text="PAN Back"
                                android:textColor="@color/texts"
                                android:textColorHint="@color/color_edit_hint"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:background="@drawable/edit_background"
                                android:inputType="textPassword"
                                android:padding="@dimen/_8sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:src="@drawable/baseline_add_a_photo"
                                android:textColor="@color/color_edit_hint"
                                android:textColorHint="@color/color_edit_hint"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>





                <Button
                    android:id="@+id/btnUpdate"
                    android:backgroundTint="@color/color_primary"
                    app:cornerRadius="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:elevation="@dimen/_3sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/update_your_profile"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnLogout"
                    android:backgroundTint="@color/red"
                    app:cornerRadius="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:elevation="@dimen/_3sdp"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/logout"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>